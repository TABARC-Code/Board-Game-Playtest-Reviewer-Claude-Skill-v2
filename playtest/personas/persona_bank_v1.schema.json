{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "tabarc-code:persona_bank:v1",
  "title": "Playtester Persona Bank (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "count",
    "personas"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "v1"
    },
    "count": {
      "type": "integer",
      "minimum": 1
    },
    "maintainer": {
      "type": "string"
    },
    "notes": {
      "type": "string"
    },
    "personas": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "persona_id",
          "label",
          "archetype",
          "experience_band",
          "rules_tolerance"
        ],
        "properties": {
          "persona_id": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "archetype": {
            "type": "string"
          },
          "experience_band": {
            "type": "string"
          },
          "likes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "hates_or_struggles": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "table_behaviours": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "play_goals": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "likely_failure_modes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "rules_tolerance": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high"
            ]
          },
          "conflict_style": {
            "type": "string"
          },
          "analysis_style": {
            "type": "string"
          },
          "attention_profile": {
            "type": "string"
          },
          "feedback_style": {
            "type": "string"
          },
          "red_flags_to_watch": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}